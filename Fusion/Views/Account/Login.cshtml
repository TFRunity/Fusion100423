@model LoginViewModel
@{ 
    OrderNavbarViewModel viewModel = new OrderNavbarViewModel() { Authentificated = false };
}
<div class="log-in-out-background">
    @{await Html.RenderPartialAsync("_Navbar", viewModel );}
    <div class="form-center-box">
        <h1>Sign Up</h1>
        <form method="post" asp-controller="Account" asp-action="Login"
              asp-route-returnUrl="@Model.ReturnUrl">
            <div class="input-group">
                <div class="input-field">
                    <i class="fa-solid fa-user" style="color: #ff7300;"></i>
                    <input asp-for="Name" placeholder="Имя" />
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="input-field">
                    <i class="fa-solid fa-lock" style="color: #ff7300;"></i>
                    <input asp-for="Password" placeholder="Пароль" />
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="input-field w-50" style="color: #ff7300;">
                    <h6 style="color: #e19766">Запомнить меня</h6>
                    <input asp-for="RememberMe" />
                </div>
                <div class="btn-field">
                    <input type="submit" value="Войти" />
                </div>
                <div class="input-field">
                    <p>У вас нет аккаунта? <a asp-action="Register" asp-controller="Account">Зарегистрироваться</a></p>
                </div>
            </div>
        </form>
    </div>
</div>