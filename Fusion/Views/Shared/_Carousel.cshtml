<div class="container-md pt-md-1 px-md-0" >
    <div id="carouselExampleFade" class="carousel slide rounded" data-bs-ride="carousel">
        <div class="carousel-inner carousel-cover" style="max-height: 50em;">
            <div class="carousel-item active">
                <img src="/assets/img/back-carousel1.jpg" class="img-fluid rounded-5">
            </div>
            <div class="carousel-item">
                <img src="/assets/img/back-carousel2.jpg" class="img-fluid rounded-5">
